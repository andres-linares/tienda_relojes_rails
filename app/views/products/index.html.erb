<% if current_user.present? && current_user.admin %>
  <div class="row mb-5">
    <%= link_to new_product_path do %>
      <button type="button" class="btn btn-primary">
        <%= fa_icon 'plus-circle' %>
        AÃ±adir Producto
      </button>
    <% end %>
  </div>
<% end %>

<div class="row">
  <% Product.all.each do |product| %>
    <div class="card bg-light mb-4 mr-4" style="width: 18rem">
      <% if product.discount && product.discount > 0 %>
        <span class="price-badge">
          <%= product.discount %>% Descuento
        </span>
      <% end %>

      <%= link_to product do %>
        <%= image_tag product.images.first.variant(resize: '400x400'), class: 'card-img-top' %>
      <% end %>
      <div class="card-body">
        <h6 class="card-subtitle mb-2"><%= product.brand.name.upcase %></h6>
        <h5 class="card-title"><%= product.name %></h5>

        <% if product.discount && product.discount > 0 %>
          <h6 class="card-subtitle mb-2 text-muted original-price"><%= format_price product.price %></h6>
          <h6 class="card-subtitle mb-2 text-muted price-with-discount"><%= format_price(apply_discount product.price, product.discount) %></h6>
        <% else %>
          <h6 class="card-subtitle mb-2 text-muted"><%= format_price product.price %></h6>
        <% end %>

        <p class="card-test"><%= crop_text product.description %></p>
      </div>
    </div>
  <% end %>
</div>
