<h1>Add product</h1>
<%= form_with model: @product do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.label :price %>
    <%= form.text_field :price %>
  </p>

  <p>
    <%= form.label :images %>
    <%= form.file_field :images %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
